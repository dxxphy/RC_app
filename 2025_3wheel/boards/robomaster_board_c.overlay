/ {
	chassis: chassis {
		compatible = "ares,swchassis";
		status = "okay";
		steerwheels = <&steerwheel1 0 2424>,
					  <&steerwheel2 (-2100) (-1212)>,
					  <&steerwheel3 2100 (-1212)>;
		angle-pid = <&chassis_roll_angle_pid>;
	};
	steerwheel {
		steerwheel1: steerwheel1 {
			#steerwheel-cells = <2>;
			compatible = "ares,steerwheel";
			status = "okay";
			steer-motor = <&motor_steer0>;
			wheel-motor = <&motor_wheel0>;
			wheel-radius = "0.555";
			angle-offset = "120";
		};

		steerwheel2: steerwheel2 {
			#steerwheel-cells = <2>;
			compatible = "ares,steerwheel";
			status = "okay";
			steer-motor = <&motor_steer1>;
			wheel-motor = <&motor_wheel1>;
			wheel-radius = "0.555";
			angle-offset = "120";
		};

		steerwheel3: steerwheel3 {
			#steerwheel-cells = <2>;
			compatible = "ares,steerwheel";
			status = "okay";
			steer-motor = <&motor_steer2>;
			wheel-motor = <&motor_wheel2>;
			wheel-radius = "0.555";
			angle-offset = "0";
		};
	};

	rm_motor {
		motor_wheel0: motor_wheel0{
			compatible = "dji,motor";
            is_m3508;
			id = <1>;
            rx_id = <0x201>;
            tx_id = <0x200>;
			gear_ratio = "15.76";
			status = "okay";
			can_channel = <&canbus1>;
			controllers = <&wheel_speed_pid>;
			capabilities = "speed";
		};

		motor_wheel1: motor_wheel1{
			compatible = "dji,motor";
            is_m3508;
			id = <2>;
            rx_id = <0x202>;
            tx_id = <0x200>;
			gear_ratio = "15.76";
			status = "okay";
			can_channel = <&canbus1>;
			controllers = <&wheel_speed_pid>;
			capabilities = "speed";
		};

		motor_wheel2: motor_wheel2{
			compatible = "dji,motor";
            is_m3508;
			id = <3>;
            rx_id = <0x203>;
            tx_id = <0x200>;
			gear_ratio = "15.76";
			status = "okay";
			can_channel = <&canbus1>;
			controllers = <&wheel_speed_pid>;
			capabilities = "speed";
		};

		motor_steer0: motor_steer0{
			compatible = "dji,motor";
			is_gm6020;
			id = <1>;
			rx_id = <0x205>;
			tx_id = <0x1FF>;
			gear_ratio = "1.0";
			status = "okay";
			can_channel = <&canbus2>;
			controllers = <&steer_angle_pid &steer_speed_pid>;
			capabilities = "angle", "speed";
		};

		motor_steer1: motor_steer1{
			compatible = "dji,motor";
			is_gm6020;
			id = <2>;
			rx_id = <0x206>;
			tx_id = <0x1FF>;
			gear_ratio = "1.0";
			status = "okay";
			can_channel = <&canbus2>;
			controllers = <&steer_angle_pid &steer_speed_pid>;
			capabilities = "angle", "speed";
		};

		motor_steer2: motor_steer2{
			compatible = "dji,motor";
			is_gm6020;
			id = <3>;
			rx_id = <0x207>;
			tx_id = <0x1FF>;
			gear_ratio = "1.0";
			status = "okay";
			can_channel = <&canbus2>;
			controllers = <&steer_angle_pid &steer_speed_pid>;
			capabilities = "angle", "speed";
		};
	};

	pid {
		wheel_speed_pid: wheel_speed_pid {
			#controller-cells = <0>;
			compatible = "pid,single";
			k_p = "1";
			k_i = "0";
			k_d = "180";
		};

		steer_speed_pid: steer_speed_pid {
			#controller-cells = <0>;
			compatible = "pid,single";
			k_p = "0.007";
			k_i = "0";
			k_d = "180";
		};

		steer_angle_pid: steer_angle_pid {
			#controller-cells = <0>;
			compatible = "pid,single";
			k_p = "1.8";
			k_i = "0";
			k_d = "120";
		};

		chassis_roll_angle_pid: chassis_roll_angle_pid {
			#controller-cells = <0>;
			compatible = "pid,single";
			k_p = "0.4";
			k_i = "0.3";
			k_d = "3880";
			i_max = "2";
		};
	};
	
	sbus0: sbus0 {
		compatible = "ares,sbus";
		status = "okay";
	};
};